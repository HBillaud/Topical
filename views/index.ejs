<%- include('partials/header.ejs') %>

<%- include('partials/navbar.ejs') %>

    <!-- post creation -->
    <div class="card" style="width: 50%; margin: auto; margin-top: 30px; text-align: center;">
        <div class="card-header">
          Post
        </div>
        <div class="card-body">
          <h5 class="card-title">What's on your mind today?</h5>
          <!-- <p class="card-text">With supporting text below as a natural lead-in to additional content.</p> -->
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#createPost">
            Create post
          </button>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="createPost" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="POST" action="/createPost">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Post</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <!-- Title -->
                        <div class="form-group">
                            <input type="text" maxlength="30" class="form-control" name="title" placeholder="Title" required>
                        </div>
                        <!-- Choose topics among existing ones or create new one -->
                        <div class="form-group">
                            <input type="text" maxlength="15" class="form-control" name="topic" placeholder="Topic" required>
                        </div>
                        <!-- Text input -->
                        <div class="form-group">
                            <textarea maxlength="500" rows="3" class="form-control" name="description" placeholder="What's on your mind?" required></textarea>
                        </div>
                        <!-- Upload image -->
                        <div class="form-group">
                            <div class="input_group">
                                <input type="text" class="form-control" name="imgURL">
                            </div>
                        </div>
                            <!--
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupFileAddon01">Upload Image</span>
                                    </div>
                                    <div class="custom-file">
                                    <input type="file" accept=".jpg,.png" name="image" class="custom-file-input" id="inputGroupFile01"
                                        aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01">Choose file (.jpg, .png)</label>
                                    </div>
                                </div>
                            </div>
                            -->
                            <!-- Checkbox to make post anonymous -->
                            <div class="form-group">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="1" name="anonymousCheck" id="anonymousCheck">
                                    <label class="form-check-label" for="defaultCheck1">
                                    Post anonymously
                                    </label>
                                </div>
                            </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" value="submit" class="btn btn-outline-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

<%- include('partials/footer.ejs') %>