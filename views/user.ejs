    <%- include('partials/header.ejs') %>


    <%- include('partials/navbar.ejs') %>


    <div class="row">
        <div class="col-md-4">
                
            <h1><%= user.name %>'s Profile</h1>
            <h2><%= user.username %></h2> 
            <h2><%= user.email %></h2><br>

            
                <% if(!isFollowing){ %>
                    <form method="POST" style="margin-top: 30px">
                        <div class="form-group" style="margin: auto;">
                            <button type="submit" name="press" value="followUser" class="btn btn-primary">Follow</button>
                        </div>
                    </form>
                <% } else{ %>  
                    <form method="POST" style="margin-top: 30px">
                        <div class="form-group" style="margin: auto;">
                            <button type="submit" name="press" value="unfollowUser" class="btn btn-primary">Unfollow</button>
                        </div>
                    </form>
                <% } %>
            
            </form>

            <div class="thumbnail">
                <img src="<%= user.picture %>" width="300" height="300"> 
                
            </div>
            <br><h3><%= user.bio %></h3>
        </div>
    </div>


    <%- include('partials/footer.ejs') %>

